{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Strictest",
	"compilerOptions": {
		"declaration": false,
		"declarationMap": false,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"moduleDetection": "force",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022",
		"allowJs": true,
		"noEmit": true,
		"tsBuildInfoFile": "${configDir}/tsconfig.tsbuildinfo",
		"baseUrl": "${configDir}",
		"paths": {
			"~/*": ["${configDir}/app/*"]
		}
	},
	"include": [
		"${configDir}/.storybook/**/*",
		"${configDir}/**/*.ts",
		"${configDir}/**/*.tsx",
		"${configDir}/**/*.cts",
		"${configDir}/**/*.ctsx",
		"${configDir}/**/*.mts",
		"${configDir}/**/*.mtsx",
		"${configDir}/**/*.js",
		"${configDir}/**/*.jsx",
		"${configDir}/**/*.cjs",
		"${configDir}/**/*.cjsx",
		"${configDir}/**/*.mjs",
		"${configDir}/**/*.mjsx"
	],
	"exclude": [
		"${configDir}/.next",
		"${configDir}/.turbo",
		"${configDir}/node_modules",
		"${configDir}/dist",
		"${configDir}/storybook-static",
		"${configDir}/playwright-report",
		"${configDir}/test-results"
	]
}
