{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"compile": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["sanity.types.ts", "schema.json"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {},
		"start": {},
		"e2e:ui": {},
		"e2e:run": {},
		"e2e:ci": {
			"dependsOn": ["^build"]
		},

		"test:ui": {
			"cache": false,
			"persistent": true
		},
		"test:run": {},
		"test": {}
	},
	"globalEnv": [
		"NEXT_PUBLIC_SANITY_PROJECT_ID",
		"SANITY_STUDIO_PROJECT_ID",
		"SANITY_STUDIO_READ_TOKEN",
		"SANITY_STUDIO_WRITE_TOKEN",
		"SANITY_DEPLOY_TOKEN",
		"SANITY_STUDIO_WEBHOOK_REVALIDATE",
		"SANITY_STUDIO_HOSTNAME",
		"SANITY_STUDIO_PREVIEW_URL",
		"SANITY_STUDIO_STUDIO_HOST",
		"NEXT_PUBLIC_SITE_DOMAIN",
		"VERCEL_ENV",
		"CI"
	],
	"ui": "stream"
}
